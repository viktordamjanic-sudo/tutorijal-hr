---
// Module Detail Page - Server Rendered
import Layout from '../../layouts/Layout.astro';
import { PREDEFINED_TASKS } from '../../lib/constants';

const { id } = Astro.params;
const task = PREDEFINED_TASKS.find(t => t.id === id);

if (!task) {
  return Astro.redirect('/');
}
---

<Layout title={`${task.title} | tutorijal.hr`}>
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12 px-4">
    <div class="max-w-3xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <a href="/" class="text-blue-600 hover:underline">‚Üê Natrag na poƒçetnu</a>
      </nav>

      <!-- Header -->
      <div class="bg-white rounded-2xl p-8 shadow-sm mb-6">
        <div class="flex items-center gap-4 mb-4">
          <span class="text-6xl">{task.icon}</span>
          <div>
            <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium mb-2 ${
              task.difficulty === 'beginner' ? 'bg-green-100 text-green-700' :
              task.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-700' :
              'bg-red-100 text-red-700'
            }`}>
              {task.difficulty === 'beginner' ? '‚≠ê Lagano' :
               task.difficulty === 'intermediate' ? '‚≠ê‚≠ê Srednje' : '‚≠ê‚≠ê‚≠ê Te≈°ko'}
            </span>
            <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium ml-2 ${
              task.targetAudience === 'kids' ? 'bg-green-100 text-green-700' :
              task.targetAudience === 'seniors' ? 'bg-orange-100 text-orange-700' :
              'bg-blue-100 text-blue-700'
            }`}>
              {task.targetAudience === 'kids' ? 'üë∂ Za djecu' :
               task.targetAudience === 'seniors' ? 'üë¥ Za starije' : 'üë• Za sve'}
            </span>
          </div>
        </div>
        
        <h1 class="text-3xl font-bold text-gray-800 mb-4">{task.title}</h1>
        
        <p class="text-lg text-gray-600">{task.scenario}</p>
      </div>

      <!-- Problem -->
      <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-r-xl p-6 mb-6">
        <h2 class="font-bold text-lg mb-2">üéØ Problem</h2>
        <p class="text-gray-700">{task.problem}</p>
      </div>

      <!-- Interactive AI Section -->
      <div class="bg-white rounded-2xl p-8 shadow-sm mb-6">
        <h2 class="font-bold text-xl mb-4">ü§ñ Isprobaj s AI-jem</h2>
        
        <div class="bg-gray-50 rounded-xl p-4 mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Primjer prompta (mo≈æe≈° ga promijeniti!):
          </label>
          <textarea
            id="ai-prompt"
            class="w-full p-4 border rounded-lg font-mono text-sm"
            rows={4}
          >{task.aiPrompt}</textarea>
        </div>
        
        <button
          id="send-to-ai"
          class="w-full bg-blue-600 text-white py-4 rounded-xl font-semibold hover:bg-blue-700 transition disabled:opacity-50 disabled:ursor-not-allowed active:scale-95"
          data-task-title={task.title}
          data-task-scenario={task.scenario}
          data-task-problem={task.problem}
          onclick="window.sendToAI && window.sendToAI(this)"
        >
          üöÄ Po≈°alji AI-ju i vidi rje≈°enje
        </button>
        
        <p id="login-notice" class="hidden mt-2 text-sm text-orange-600 text-center">
          ‚ö†Ô∏è <a href="/sign-in" class="underline font-medium">Prijavi se</a> ili 
          <a href="/sign-up" class="underline font-medium">registriraj</a> da vidi≈° rje≈°enje!
        </p>
        
        <!-- AI Response Area (hidden by default) -->
        <div id="ai-response" class="hidden mt-6 bg-green-50 rounded-xl p-4 border border-green-200">
          <h3 class="font-semibold text-green-800 mb-2">‚ú® AI predla≈æe:</h3>
          <div id="response-content" class="text-gray-700 whitespace-pre-wrap"></div>        
        </div>
      </div>

      <!-- Learning Point -->
      <div class="bg-blue-50 rounded-2xl p-6 mb-6">
        <h2 class="font-bold text-lg mb-2">üí° ≈†to smo nauƒçili?</h2>
        <p class="text-gray-700">{task.learningPoint}</p>
      </div>

      <!-- Navigation -->
      <div class="flex justify-between">
        <a href="/" class="text-gray-600 hover:text-blue-600 transition">
          ‚Üê Svi moduli
        </a>
        
        <button class="bg-gray-100 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-200 transition"
          onclick="alert('üíæ Spremljeno u favorites! (Demo)')"
        >
          üíæ Spremi
        </button>
      </div>
    </div>
  </main>

  <script is:inline>
    window.sendToAI = async function(btn) {
      const responseDiv = document.getElementById('ai-response');
      const responseContent = document.getElementById('response-content');
      const promptTextarea = document.getElementById('ai-prompt');
      const loginNotice = document.getElementById('login-notice');
      
      if (!promptTextarea || !responseDiv || !responseContent) {
        alert('Gre≈°ka: Elementi nisu pronaƒëeni');
        return;
      }
      
      const prompt = promptTextarea.value.trim();
      if (!prompt) {
        alert('Unesi prompt prije slanja!');
        return;
      }
      
      if (loginNotice) loginNotice.classList.add('hidden');
      
      btn.disabled = true;
      btn.textContent = 'AI razmi≈°lja...';
      
      try {
        const response = await fetch('/api/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: prompt,
            context: 'Zadatak: ' + (btn.dataset.taskTitle || '') + '\nScenarij: ' + (btn.dataset.taskScenario || '') + '\nProblem: ' + (btn.dataset.taskProblem || '')
          })
        });
        
        if (response.status === 401) {
          if (loginNotice) loginNotice.classList.remove('hidden');
          btn.textContent = 'Po≈°alji AI-ju i vidi rje≈°enje';
          btn.disabled = false;
          return;
        }
        
        const data = await response.json();
        
        if (!response.ok || data.error) {
          throw new Error(data.error || 'HTTP ' + response.status);
        }
        
        responseContent.textContent = data.response;
        responseDiv.classList.remove('hidden');
        responseDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        
        btn.textContent = 'Odgovor generiran!';
        btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        btn.classList.add('bg-green-600', 'hover:bg-green-700');
        
      } catch (error) {
        console.error('Error:', error);
        responseContent.innerHTML = '<span class="text-red-600">Gre≈°ka: ' + (error.message || 'AI nije dostupan') + '</span>';
        responseDiv.classList.remove('hidden');
        btn.textContent = 'Poku≈°aj ponovo';
        btn.disabled = false;
        btn.classList.remove('bg-blue-600');
        btn.classList.add('bg-orange-600');
      }
    };
    
    // Auto-attach for non-inline browsers
    document.addEventListener('DOMContentLoaded', function() {
      const btn = document.getElementById('send-to-ai');
      if (btn && !btn._attached) {
        btn._attached = true;
        btn.addEventListener('click', function() { window.sendToAI(this); });
        btn.addEventListener('touchend', function(e) { e.preventDefault(); window.sendToAI(this); });
      }
    });
  </script>
</Layout>
