---
// Module Detail Page - Server Rendered
import Layout from '../../layouts/Layout.astro';
import { PREDEFINED_TASKS } from '../../lib/constants';
import { SignedIn, SignedOut } from '@clerk/astro/components';

const { id } = Astro.params;
const task = PREDEFINED_TASKS.find(t => t.id === id);

if (!task) {
  return Astro.redirect('/');
}
---

<Layout title={`[ ${task.id}.json ] | tutorijal.hr`}>
  <main class="h-[100dvh] bg-[#F4F4F0] text-black font-['Nunito'] overflow-hidden flex flex-col selection:bg-black selection:text-[#FFDF00]">
    
    <!-- Top Nav Bar (Brutalist style) -->
    <header class="h-14 border-b-4 border-black shrink-0 flex items-center px-6 justify-between bg-white z-20">
      <div class="flex items-center gap-6">
        <a href="/" class="font-black text-xl tracking-tighter uppercase border-2 border-transparent hover:border-black px-2 py-1 transition-all">
          ← Nazad
        </a>
      </div>
      <div class="text-xs font-bold font-mono text-black flex gap-4 uppercase bg-[#FFDF00] px-3 py-1.5 border-2 border-black shadow-[2px_2px_0px_#000]">
        <span>status: online</span>
      </div>
    </header>

    <div class="flex-1 flex overflow-hidden">
      <!-- Main Layout Grid (Now Flex for exact split) -->
      <div class="flex-1 flex flex-col lg:flex-row w-full max-w-[100vw]">
        
        <!-- ============================================== -->
        <!-- LEFT PANE: CONTEXT (Brutalist Sidebar)         -->
        <!-- ============================================== -->
        <div class="w-full lg:w-[400px] xl:w-[450px] shrink-0 border-r-4 border-black bg-white flex flex-col h-[40vh] lg:h-full relative z-10">
          
          <div class="flex border-b-4 border-black shrink-0 bg-[#F4F4F0] overflow-x-auto no-scrollbar font-bold uppercase">
            <div class="px-5 py-3 border-r-4 border-black bg-white text-black text-xs flex items-center gap-2 border-b-4 border-b-transparent">
              # UPUTE
            </div>
            <div class="px-5 py-3 border-r-4 border-black text-black text-xs flex items-center hover:bg-[#FFDF00] cursor-pointer transition-colors">
              {} KONFIG
            </div>
          </div>

          <!-- Editor Content (Scrollable) -->
          <div class="flex-1 overflow-y-auto p-6 md:p-8 styled-scroll flex flex-col gap-8">
            
            <!-- Metadata Area -->
            <div>
              <div class="flex flex-wrap gap-3 mb-6 font-bold text-[10px] uppercase tracking-widest">
                <span class="px-3 py-1.5 border-2 border-black bg-[#E2F1E7] shadow-[2px_2px_0px_#000]">
                  Type: {task.category}
                </span>
                <span class="px-3 py-1.5 border-2 border-black bg-[#FFDF00] shadow-[2px_2px_0px_#000]">
                  Level: {task.difficulty}
                </span>
              </div>
              
              <h1 class="text-3xl xl:text-4xl font-black text-black mb-4 font-['Outfit'] uppercase leading-none tracking-tighter">
                {task.title}
              </h1>
              
              <div class="p-5 border-4 border-black bg-[#FFE5F1] shadow-[4px_4px_0px_#000] text-black font-medium leading-relaxed mt-6">
                <span class="font-black text-xs uppercase block mb-3 border-b-2 border-black pb-2">Kontekst</span>
                {task.scenario}
              </div>
            </div>

            <!-- The Problem Area -->
            <div class="mt-4">
              <h2 class="font-black text-sm uppercase mb-3 flex items-center gap-2">
                <span class="w-3 h-3 rounded-none border-2 border-black bg-[#FF4911]"></span>
                Aktivni Cilj
              </h2>
              <div class="p-5 border-4 border-black bg-white shadow-[4px_4px_0px_#000]">
                <p class="text-black text-lg leading-relaxed font-bold">
                  {task.problem}
                </p>
              </div>
            </div>
            
          </div>
        </div> <!-- End Left Pane -->

        <!-- ============================================== -->
        <!-- RIGHT PANE: ACTION/CHAT (Brutalist Canvas)     -->
        <!-- ============================================== -->
        <div class="flex-1 flex flex-col h-full p-4 lg:p-8 relative bg-[#F4F4F0]">
          
          <!-- The floating brutalist window -->
          <div class="bg-white border-4 border-black shadow-brutal flex flex-col h-full overflow-hidden mx-auto w-full max-w-4xl relative">
            
            <!-- Canvas Header -->
            <div class="border-b-4 border-black bg-[#8CFF98] p-4 shrink-0 flex items-center justify-between z-10">
              <div class="flex items-center gap-3">
                <span class="font-black text-xl uppercase tracking-tighter text-black">Radni Prostor</span>
              </div>
            </div>
            
            <SignedIn>
              <div class="flex flex-col flex-1 h-full min-h-0 relative">
                <!-- Scrollable Chat Area -->
                <div id="chat-wrapper" class="flex-1 overflow-y-auto p-4 md:p-8 styled-scroll bg-[url('/noise.png')] bg-repeat">
                  <div id="chat-container" class="flex flex-col gap-6 max-w-3xl mx-auto pb-4">
                    <!-- Initial System Greeting -->
                    <div class="flex gap-4 items-start group">
                      <div class="w-10 h-10 border-2 border-black bg-[#FFDF00] shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-black text-sm shrink-0">AI</div>
                      <div class="text-black font-bold text-lg leading-relaxed max-w-[90%] md:max-w-[85%] border-2 border-black bg-white p-4 shadow-[4px_4px_0px_#000]">
                        Spreman. Rješavamo <span class="bg-[#FF4911] text-white px-1 border border-black uppercase">"{task.title}"</span>. <br/><br/>
                        Unesite prompt za obradu ispod.
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Fix: Solid inline prompt area (NO absolute positioning) -->
                <div class="shrink-0 border-t-4 border-black bg-[#F4F4F0] p-4 md:p-6 pb-6 w-full z-20">
                  <div class="max-w-3xl mx-auto w-full">
                    
                    <!-- Idea Chip -->
                    <div class="flex justify-end mb-3">
                      <button 
                        onclick={`document.getElementById('ai-prompt').value = \`${task.aiPrompt.replace(/`/g, '\\`')}\`; document.getElementById('ai-prompt').focus();`}
                        class="text-xs font-black uppercase tracking-wider text-black bg-[#FFE5F1] hover:bg-white border-2 border-black px-4 py-2 shadow-[2px_2px_0px_#000] active:translate-y-[2px] active:shadow-none transition-all flex items-center gap-2"
                      >
                        ⭐ SUGESTIJA SUSTAVA
                      </button>
                    </div>

                    <!-- Input Container -->
                    <div class="bg-white border-4 border-black shadow-brutal flex items-end p-2 focus-within:bg-[#FFFDE7]">
                      <textarea
                        id="ai-prompt"
                        class="w-full bg-transparent border-0 font-bold text-black text-lg focus:ring-0 outline-none resize-none leading-relaxed min-h-[50px] max-h-[150px] py-3 pl-2 styled-scroll placeholder:text-slate-400"
                        rows={1}
                        placeholder="Upiši prompt ovdje..."
                        oninput="this.style.height = 'auto'; this.style.height = Math.min(this.scrollHeight, 150) + 'px'"
                        onkeydown="if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); document.getElementById('send-to-ai').click(); }"
                      ></textarea>
                      
                      <button
                        id="send-to-ai"
                        class="bg-[#FF4911] text-white font-black text-xl w-12 h-12 border-4 border-black shadow-[2px_2px_0px_#000] active:translate-y-[2px] active:shadow-none flex items-center justify-center hover:bg-[#E63E00] transition-all disabled:opacity-50 shrink-0 mb-1 mr-1"
                        data-task-id={task.id}
                        data-task-title={task.title}
                        data-task-scenario={task.scenario}
                        data-task-problem={task.problem}
                        onclick="window.sendToAI && window.sendToAI(this)"
                        title="Pošalji (Enter)"
                      >
                        →
                      </button>
                    </div>
                    
                    <p id="rate-limit-notice" class="hidden mt-4 text-sm font-black text-black bg-rose-400 p-2 border-2 border-black text-center shadow-[4px_4px_0px_#000] w-full max-w-md mx-auto">
                      ERROR: RATE LIMIT EXCEEDED. ODMORI.
                    </p>
                  </div>
                </div>
              </div>
            </SignedIn>

            <!-- Locked State -->
            <SignedOut>
              <div class="h-full flex flex-1 items-center justify-center p-8 bg-[#F4F4F0] bg-[url('/noise.png')] bg-repeat">
                <div class="bg-white border-4 border-black p-10 text-center shadow-brutal max-w-md w-full relative">
                  
                  <div class="w-20 h-20 bg-[#FFDF00] border-4 border-black shadow-[4px_4px_0px_#000] flex items-center justify-center text-4xl mx-auto mb-8 font-black">
                    !
                  </div>
                  <h3 class="font-black text-3xl text-black mb-4 uppercase tracking-tighter">Zaključano</h3>
                  <p class="text-black font-bold mb-8 text-lg leading-relaxed">Prijavi se za testiranje AI modela.</p>
                  
                  <div class="flex flex-col gap-4">
                    <a href="/sign-up" class="bg-black text-white px-6 py-4 uppercase font-black text-xl hover:bg-[#FF4911] hover:text-black border-4 border-black shadow-[4px_4px_0px_#FFDF00] transition-colors">
                      Registracija
                    </a>
                    <a href="/sign-in" class="bg-transparent text-black px-6 py-4 uppercase font-black text-xl border-4 border-transparent hover:border-black transition-all">
                      Prijava
                    </a>
                  </div>
                </div>
              </div>
            </SignedOut>
          </div> <!-- End Brutalist Canvas container -->

      <!-- Hidden Learning Point Data -->
      <div id="learning-point-data" class="hidden" data-content={task.learningPoint}></div>

        </div> <!-- End Right Pane -->
      </div> <!-- End Grid -->


    </div>
  </main>

  <script is:inline>
    window.sendToAI = async function(btn) {
      const promptTextarea = document.getElementById('ai-prompt');
      const chatContainer = document.getElementById('chat-container');
      const loginNotice = document.getElementById('login-notice');
      const learningPointData = document.getElementById('learning-point-data');
      
      const prompt = promptTextarea.value.trim();
      if (!prompt) return; // do nothing if empty
      
      if (loginNotice) loginNotice.classList.add('hidden');
      
      // 1. Add User Bubble (Brutalist styled)
      const userBubble = document.createElement('div');
      userBubble.className = 'flex gap-4 items-start group max-w-3xl mx-auto w-full justify-end';
      userBubble.innerHTML = `
        <div class="text-black font-bold text-lg leading-relaxed max-w-[90%] md:max-w-[85%] border-2 border-black bg-[#E2F1E7] p-4 shadow-[4px_4px_0px_#000] whitespace-pre-wrap">${prompt}</div>
        <div class="w-10 h-10 border-2 border-black bg-white shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-black text-xs shrink-0 uppercase">JA</div>
      `;
      chatContainer.appendChild(userBubble);
      
      // Clear input and change button state
      promptTextarea.value = '';
      promptTextarea.style.height = '50px';
      btn.disabled = true;
      btn.innerHTML = `<span class="animate-pulse">⏳</span>`;
      
      // 2. Add AI Loading Bubble
      const aiBubble = document.createElement('div');
      aiBubble.className = 'flex gap-4 items-start max-w-3xl mx-auto w-full';
      aiBubble.innerHTML = `
        <div class="w-10 h-10 border-2 border-black bg-[#FFDF00] shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-black text-sm shrink-0">AI</div>
        <div class="text-black font-bold text-lg leading-relaxed max-w-[85%] border-2 border-black bg-white p-4 shadow-[4px_4px_0px_#000] flex items-center gap-2">
          RADI <span class="animate-bounce">.</span><span class="animate-bounce" style="animation-delay: 0.1s">.</span><span class="animate-bounce" style="animation-delay: 0.2s">.</span>
        </div>
      `;
      chatContainer.appendChild(aiBubble);
      chatContainer.lastElementChild.scrollIntoView({ behavior: 'smooth', block: 'end' });
      
      try {
        const response = await fetch('/api/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: prompt,
            taskId: btn.dataset.taskId,
            context: 'Zadatak: ' + (btn.dataset.taskTitle || '') + '\nScenarij: ' + (btn.dataset.taskScenario || '') + '\nProblem: ' + (btn.dataset.taskProblem || '')
          })
        });
        
        if (response.status === 401) {
          if (loginNotice) loginNotice.classList.remove('hidden');
          // cleanup UI on auth error
          chatContainer.removeChild(aiBubble);
          chatContainer.removeChild(userBubble);
          promptTextarea.value = prompt;
          return;
        }
        
        const data = await response.json();
        if (!response.ok || data.error) throw new Error(data.error || 'HTTP ' + response.status);
        
        // Update AI bubble with response
        aiBubble.innerHTML = `
          <div class="w-10 h-10 border-2 border-black bg-[#FFDF00] shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-black text-sm shrink-0">AI</div>
          <div class="text-black font-bold text-lg leading-relaxed max-w-[85%] border-2 border-black bg-white p-4 shadow-[4px_4px_0px_#000] whitespace-pre-wrap">${data.response}</div>
        `;
        
        // Spawn the Learning Point bubble
        if (learningPointData && learningPointData.dataset.content) {
          const lpBubble = document.createElement('div');
          lpBubble.className = 'flex gap-4 items-start mt-6 max-w-3xl mx-auto w-full';
          lpBubble.innerHTML = `
            <div class="w-10 h-10 border-2 border-black bg-[#8CFF98] shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-black text-sm shrink-0 mt-2">!</div>
            <div class="border-4 border-black bg-white p-5 shadow-[4px_4px_0px_#000] text-black w-full relative group">
              <span class="absolute -top-3 left-4 bg-black text-white px-2 py-0.5 font-black text-[10px] uppercase tracking-widest">Što smo naučili?</span>
              <p class="font-bold leading-relaxed text-lg mt-1">${learningPointData.dataset.content}</p>
            </div>
          `;
          chatContainer.appendChild(lpBubble);
        }
        
      } catch (error) {
        aiBubble.innerHTML = `
          <div class="w-10 h-10 border-2 border-black bg-[#FF4911] shadow-[2px_2px_0px_#000] flex items-center justify-center font-black text-white text-sm shrink-0">ERR</div>
          <div class="border-4 border-black bg-white p-4 text-black font-bold shadow-[4px_4px_0px_#FF4911] w-full">GRESKA: ${error.message || 'Sustav pao'}</div>
        `;
      } finally {
        btn.disabled = false;
        btn.innerHTML = `→`;
        chatContainer.lastElementChild.scrollIntoView({ behavior: 'smooth', block: 'end' });
      }
    };
  </script>
</Layout>
