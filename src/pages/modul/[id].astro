---
// Module Detail Page - Server Rendered
import Layout from '../../layouts/Layout.astro';
import { PREDEFINED_TASKS } from '../../lib/constants';
import { SignedIn, SignedOut } from '@clerk/astro/components';

const { id } = Astro.params;
const task = PREDEFINED_TASKS.find(t => t.id === id);

if (!task) {
  return Astro.redirect('/');
}
---

<Layout title={`${task.title} | tutorijal.hr`}>
  <main class="min-h-screen bg-gradient-to-b from-slate-50 to-white py-12 px-4 font-['Nunito']">
    <div class="max-w-3xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <a href="/" class="text-slate-500 hover:text-purple-600 font-bold transition-colors flex items-center gap-2">
          â† Natrag na poÄetnu
        </a>
      </nav>

      <!-- Header -->
      <div class="bg-white rounded-[2rem] p-8 md:p-10 shadow-[0_8px_30px_rgb(0,0,0,0.04)] mb-8 border border-slate-100">
        <div class="flex flex-col md:flex-row md:items-center gap-6 mb-6">
          <div class="w-24 h-24 bg-slate-50 rounded-[1.5rem] flex items-center justify-center text-6xl shadow-inner shrink-0">
            {task.icon}
          </div>
          <div>
            <div class="flex flex-wrap gap-2 mb-3">
              <span class={`px-4 py-1.5 rounded-xl text-xs font-bold uppercase tracking-wider ${
                task.difficulty === 'beginner' ? 'bg-green-100 text-green-700' :
                task.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-700' :
                'bg-red-100 text-red-700'
              }`}>
                {task.difficulty === 'beginner' ? 'â­ Lagano' :
                 task.difficulty === 'intermediate' ? 'â­â­ Srednje' : 'â­â­â­ TeÅ¡ko'}
              </span>
              <span class={`px-4 py-1.5 rounded-xl text-xs font-bold uppercase tracking-wider ${
                task.targetAudience === 'kids' ? 'bg-green-100 text-green-700' :
                task.targetAudience === 'seniors' ? 'bg-orange-100 text-orange-700' :
                'bg-blue-100 text-blue-700'
              }`}>
                {task.targetAudience === 'kids' ? 'ğŸ‘¶ Za djecu' :
                 task.targetAudience === 'seniors' ? 'ğŸ‘´ Za starije' : 'ğŸ‘¥ Za sve'}
              </span>
            </div>
            <h1 class="text-4xl font-extrabold text-slate-800 mb-2 font-['Outfit'] leading-tight">{task.title}</h1>
          </div>
        </div>
        
        <p class="text-xl text-slate-600 leading-relaxed">{task.scenario}</p>
      </div>

      <!-- Problem -->
      <div class="bg-gradient-to-r from-amber-50 to-orange-50 rounded-[2rem] p-8 mb-8 border border-amber-100 shadow-sm relative overflow-hidden">
        <div class="absolute top-0 left-0 w-2 h-full bg-amber-400"></div>
        <h2 class="font-extrabold text-2xl mb-3 text-amber-900 font-['Outfit'] flex items-center gap-3">
          <span>ğŸ¯</span> Problem
        </h2>
        <p class="text-amber-800 text-lg leading-relaxed">{task.problem}</p>
      </div>

      <!-- Interactive AI Section -->
      <div class="bg-white rounded-[2rem] p-8 md:p-10 shadow-[0_8px_30px_rgb(0,0,0,0.06)] mb-8 border border-slate-100">
        <h2 class="font-extrabold text-2xl mb-6 text-slate-800 font-['Outfit'] flex items-center gap-3">
          <span>ğŸ¤–</span> Isprobaj s AI-jem
        </h2>
        
        <SignedIn>
          <!-- Chat Area -->
          <div id="chat-container" class="flex flex-col gap-6 mb-6">
            <!-- Initial Greeting -->
            <div class="flex gap-4 items-start">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white text-xl shrink-0 shadow-md">ğŸ¤–</div>
              <div class="bg-slate-50 border border-slate-100 rounded-2xl p-4 md:p-5 text-slate-700 leading-relaxed max-w-[85%] shadow-sm">
                Bok! Ja sam tvoj AI asistent. U ovom zadatku Å¾elimo rijeÅ¡iti problem: <strong>"{task.title}"</strong>. <br/><br/>Å to Ä‡eÅ¡ mi toÄno napisati (prompt) da ti pomognem? PokuÅ¡aj biti jako jasan i precizan u svojim uputama!
              </div>
            </div>
          </div>

          <!-- Idea Chip -->
          <div class="flex flex-wrap items-center gap-3 mb-4 md:pl-14">
            <button 
              onclick={`document.getElementById('ai-prompt').value = \`${task.aiPrompt.replace(/`/g, '\\`')}\`; document.getElementById('ai-prompt').focus();`}
              class="text-xs font-bold text-purple-700 bg-purple-50 hover:bg-purple-100 hover:text-purple-800 border border-purple-200 px-4 py-2 rounded-full transition-all flex items-center gap-2 shadow-sm"
            >
              <span class="text-sm">ğŸ’¡</span> NemaÅ¡ ideju? Klikni za primjer prompta
            </button>
          </div>

          <!-- Input Area -->
          <div class="relative bg-white border-2 border-slate-200 focus-within:border-purple-400 focus-within:ring-4 focus-within:ring-purple-100/50 rounded-2xl transition-all shadow-sm flex flex-col md:ml-14">
            <textarea
              id="ai-prompt"
              class="w-full p-4 bg-transparent border-0 font-['Nunito'] text-slate-700 text-lg focus:ring-0 outline-none resize-none leading-relaxed min-h-[100px]"
              rows={3}
              placeholder="Pitaj AI asistenta (npr. 'NapiÅ¡i kratku i pristojnu poruku...')"
              oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"
              onkeydown="if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); document.getElementById('send-to-ai').click(); }"
            ></textarea>
            
            <div class="p-2 md:p-3 flex justify-between items-center bg-slate-50/50 rounded-b-2xl border-t border-slate-100">
              <p class="text-xs text-slate-400 font-medium px-2">AI moÅ¾e pogrijeÅ¡iti. Provjeri vaÅ¾ne informacije.</p>
              
              <button
                id="send-to-ai"
                class="bg-black text-white w-10 h-10 rounded-xl flex items-center justify-center hover:bg-slate-800 hover:-translate-y-0.5 transition-all disabled:opacity-30 disabled:hover:translate-y-0 shadow-md group shrink-0"
                data-task-title={task.title}
                data-task-scenario={task.scenario}
                data-task-problem={task.problem}
                onclick="window.sendToAI && window.sendToAI(this)"
              >
                <svg class="w-5 h-5 group-hover:block transition-transform group-hover:-translate-y-0.5 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 19V5m0 0l-7 7m7-7l7 7"></path></svg>
              </button>
            </div>
          </div>
          
          <p id="rate-limit-notice" class="hidden mt-4 text-sm font-bold text-rose-500 text-center bg-rose-50 p-3 rounded-lg border border-rose-100">
            âš ï¸ Zbog prevelikog broja zahtjeva, molimo priÄekajte malo prije ponovnog slanja.
          </p>
        </SignedIn>

        <SignedOut>
          <div class="bg-gradient-to-br from-purple-50 to-slate-50 border-2 border-purple-100 rounded-2xl p-8 text-center relative overflow-hidden">
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-purple-200 rounded-full mix-blend-multiply opacity-50 blur-2xl"></div>
            <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-pink-200 rounded-full mix-blend-multiply opacity-50 blur-2xl"></div>
            
            <div class="relative z-10 max-w-lg mx-auto">
              <span class="text-5xl block mb-4 filter drop-shadow-sm">ğŸ”’</span>
              <h3 class="font-extrabold text-2xl text-slate-800 mb-2 font-['Outfit']">OtkljuÄaj interaktivne moÄ‡i!</h3>
              <p class="text-slate-600 mb-8 font-medium">Samo svakodnevni heroji (registrirani korisnici) mogu komunicirati s AI asistentom i slati zadatke. Potpuno je besplatno!</p>
              
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/sign-up" class="bg-purple-600 text-white px-8 py-4 rounded-xl font-bold shadow-lg hover:bg-purple-700 hover:-translate-y-1 transition-all">
                  ğŸš€ Registriraj se odmah
                </a>
                <a href="/sign-in" class="bg-white text-slate-700 px-8 py-4 rounded-xl font-bold border-2 border-slate-200 hover:border-purple-400 hover:text-purple-600 transition-all">
                  VeÄ‡ imaÅ¡ raÄun?
                </a>
              </div>
            </div>
          </div>
        </SignedOut>
      </div>

      <!-- Learning Point -->
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-[2rem] p-8 mb-8 border border-blue-100 shadow-sm relative overflow-hidden">
        <h2 class="font-extrabold text-2xl mb-3 text-blue-900 font-['Outfit'] flex items-center gap-3">
          <span>ğŸ’¡</span> Å to smo nauÄili?
        </h2>
        <p class="text-blue-800 text-lg leading-relaxed">{task.learningPoint}</p>
      </div>

      <!-- Navigation -->
      <div class="flex justify-between">
        <a href="/" class="text-gray-600 hover:text-blue-600 transition">
          â† Svi moduli
        </a>
        
        <button class="bg-gray-100 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-200 transition"
          onclick="alert('ğŸ’¾ Spremljeno u favorites! (Demo)')"
        >
          ğŸ’¾ Spremi
        </button>
      </div>
    </div>
  </main>

  <script is:inline>
    window.sendToAI = async function(btn) {
      const promptTextarea = document.getElementById('ai-prompt');
      const chatContainer = document.getElementById('chat-container');
      const loginNotice = document.getElementById('login-notice');
      
      const prompt = promptTextarea.value.trim();
      if (!prompt) return; // do nothing if empty
      
      if (loginNotice) loginNotice.classList.add('hidden');
      
      // 1. Add User Bubble
      const userBubble = document.createElement('div');
      userBubble.className = 'flex gap-4 items-start flex-row-reverse';
      userBubble.innerHTML = `
        <div class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 text-xl shrink-0 shadow-sm border border-slate-300">ğŸ§‘â€ğŸ“</div>
        <div class="bg-purple-100 border border-purple-200 rounded-2xl p-4 md:p-5 text-purple-900 leading-relaxed max-w-[85%] shadow-sm whitespace-pre-wrap">${prompt}</div>
      `;
      chatContainer.appendChild(userBubble);
      
      // Clear input and change button state
      promptTextarea.value = '';
      promptTextarea.style.height = '100px';
      btn.disabled = true;
      btn.innerHTML = `<svg class="w-5 h-5 animate-spin text-white" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>`;
      
      // 2. Add AI Loading Bubble
      const aiBubble = document.createElement('div');
      aiBubble.className = 'flex gap-4 items-start';
      aiBubble.innerHTML = `
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white text-xl shrink-0 shadow-md">ğŸ¤–</div>
        <div class="bg-slate-50 border border-slate-100 rounded-2xl p-4 md:p-5 text-slate-500 leading-relaxed max-w-[85%] shadow-sm flex items-center gap-2">
          <span class="animate-bounce inline-block w-2 h-2 bg-purple-400 rounded-full"></span>
          <span class="animate-bounce inline-block w-2 h-2 bg-purple-400 rounded-full" style="animation-delay: 0.2s"></span>
          <span class="animate-bounce inline-block w-2 h-2 bg-purple-400 rounded-full" style="animation-delay: 0.4s"></span>
        </div>
      `;
      chatContainer.appendChild(aiBubble);
      chatContainer.lastElementChild.scrollIntoView({ behavior: 'smooth', block: 'end' });
      
      try {
        const response = await fetch('/api/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: prompt,
            context: 'Zadatak: ' + (btn.dataset.taskTitle || '') + '\nScenarij: ' + (btn.dataset.taskScenario || '') + '\nProblem: ' + (btn.dataset.taskProblem || '')
          })
        });
        
        if (response.status === 401) {
          if (loginNotice) loginNotice.classList.remove('hidden');
          // cleanup UI on auth error
          chatContainer.removeChild(aiBubble);
          chatContainer.removeChild(userBubble);
          promptTextarea.value = prompt;
          return;
        }
        
        const data = await response.json();
        if (!response.ok || data.error) throw new Error(data.error || 'HTTP ' + response.status);
        
        // Update AI bubble with response
        aiBubble.innerHTML = `
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white text-xl shrink-0 shadow-md">ğŸ¤–</div>
          <div class="bg-white border border-green-200 rounded-2xl p-4 md:p-5 text-slate-800 leading-relaxed max-w-[85%] shadow-sm whitespace-pre-wrap">${data.response}</div>
        `;
        
      } catch (error) {
        aiBubble.innerHTML = `
          <div class="w-10 h-10 rounded-full bg-rose-500 flex items-center justify-center text-white text-xl shrink-0 shadow-md">âŒ</div>
          <div class="bg-rose-50 border border-rose-200 rounded-2xl p-4 md:p-5 text-rose-700 leading-relaxed max-w-[85%] shadow-sm">GreÅ¡ka: ${error.message || 'AI nije dostupan trenutno'}</div>
        `;
      } finally {
        btn.disabled = false;
        btn.innerHTML = `<svg class="w-5 h-5 group-hover:block transition-transform group-hover:-translate-y-0.5 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 19V5m0 0l-7 7m7-7l7 7"></path></svg>`;
        chatContainer.lastElementChild.scrollIntoView({ behavior: 'smooth', block: 'end' });
      }
    };
  </script>
</Layout>
