  <script>
    // Toggle skill details
    document.querySelectorAll('.skill-card').forEach(card => {
      card.addEventListener('click', function(e) {
        // Don't toggle if clicking the button
        if ((e.target as HTMLElement).classList.contains('add-skill-btn')) return;
        
        const details = this.querySelector('.skill-details');
        details?.classList.toggle('hidden');
      });
    });
    
    // Add skill to preview
    const addedSkills = new Set();
    const skillsList = document.getElementById('skills-list');
    const skillsCount = document.getElementById('skills-count');
    
    document.querySelectorAll('.add-skill-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.stopPropagation();
        
        const card = (this as HTMLElement).closest('.skill-card');
        const skillName = card?.getAttribute('data-skill');
        const skillEmoji = card?.querySelector('span')?.textContent;
        
        if (skillName && !addedSkills.has(skillName)) {
          addedSkills.add(skillName);
          
          // Update UI
          if (skillsList) {
            if (addedSkills.size === 1) {
              skillsList.innerHTML = '';
            }
            
            const badge = document.createElement('span');
            badge.className = 'bg-white/20 px-3 py-1 rounded-full text-sm';
            badge.textContent = `${skillEmoji} ${skillName}`;
            skillsList.appendChild(badge);
          }
          
          if (skillsCount) {
            skillsCount.textContent = addedSkills.size.toString();
          }
          
          (this as HTMLElement).textContent = 'âœ… Dodano!';
          (this as HTMLElement).disabled = true;
        }
      });
    });
  </script>
