<style>
  /* Section badge */
  .section-badge {
    display: inline-block;
    background: #eef2ff; color: #4f6ef7;
    font-size: 11px; font-weight: 700;
    text-transform: uppercase; letter-spacing: .06em;
    padding: 4px 10px; border-radius: 99px;
    border: 1px solid rgba(79,110,247,.2);
  }

  /* Lessons ‚Äî horizontal cards */
  .lessons-row {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 12px;
  }
  @media (max-width: 900px) { .lessons-row { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 600px) { .lessons-row { grid-template-columns: repeat(2, 1fr); } }
  .lesson-card {
    display: flex; flex-direction: column; align-items: center;
    gap: 6px; padding: 18px 12px; border-radius: 12px;
    background: var(--color-surface-alt); border: 1px solid var(--color-border);
    text-decoration: none; color: inherit; text-align: center;
    transition: all .18s;
  }
  .lesson-card:hover {
    background: var(--color-accent-soft); border-color: var(--color-accent-border);
    transform: translateY(-2px); box-shadow: 0 4px 14px rgba(79,110,247,.08);
  }
  .lesson-icon { width: 40px; height: 40px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 20px; }
  .lesson-num { font-size: 10px; font-weight: 600; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: .06em; }
  .lesson-name { font-size: 13px; font-weight: 600; color: var(--color-text-primary); }

  /* ===== PROMPT LAB ===== */
  .lab-title {
    font-size: 24px; font-weight: 800; color: var(--color-text-primary);
    margin-top: 10px;
  }
  .lab-subtitle {
    font-size: 14px; color: var(--color-text-secondary);
    font-weight: 500; line-height: 1.6; margin-top: 6px;
  }
  .lab-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  @media (max-width: 768px) { .lab-grid { grid-template-columns: 1fr; } }

  .lab-track {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all var(--transition-normal);
  }
  .lab-track:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }
  .lab-track__header {
    display: flex; align-items: center; gap: 12px;
    padding: 16px 18px; color: #fff;
  }
  .lab-track__icon { font-size: 28px; }
  .lab-track__name { font-size: 16px; font-weight: 800; color: #fff; }
  .lab-track__count { font-size: 11px; font-weight: 600; color: rgba(255,255,255,0.8); }
  .lab-track__body { padding: 16px 18px; background: var(--color-surface); }
  .lab-track__desc {
    font-size: 13px; color: var(--color-text-secondary);
    font-weight: 500; line-height: 1.5; margin-bottom: 14px;
  }
  .lab-track__challenges { display: flex; flex-direction: column; gap: 6px; }
  .lab-challenge {
    display: flex; align-items: center; gap: 12px;
    padding: 10px 12px; border-radius: var(--radius-sm);
    text-decoration: none; color: inherit;
    border: 1px solid var(--color-border);
    transition: all var(--transition-fast);
  }
  .lab-challenge:hover:not(.lab-challenge--locked) {
    background: var(--color-accent-soft);
    border-color: var(--color-accent-border);
  }
  .lab-challenge--locked { opacity: 0.5; cursor: default; }
  .lab-challenge__level {
    width: 28px; height: 28px; border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    font-size: 12px; font-weight: 800; flex-shrink: 0;
  }
  .lab-challenge__level--1 { background: var(--diff-beginner-bg); color: var(--diff-beginner-text); }
  .lab-challenge__level--2 { background: var(--diff-intermediate-bg); color: var(--diff-intermediate-text); }
  .lab-challenge__level--3 { background: var(--diff-advanced-bg); color: var(--diff-advanced-text); }
  .lab-challenge__title { display: block; font-size: 13px; font-weight: 700; color: var(--color-text-primary); }
  .lab-challenge__skill { display: block; font-size: 11px; font-weight: 500; color: var(--color-text-muted); margin-top: 1px; }
  .lab-challenge__arrow {
    margin-left: auto; font-size: 14px; font-weight: 700;
    color: var(--color-accent); transition: transform var(--transition-fast);
  }
  .lab-challenge:hover .lab-challenge__arrow { transform: translateX(3px); }
  .lab-challenge__lock { margin-left: auto; font-size: 14px; }

  .lab-progress { margin-top: 20px; padding-top: 18px; border-top: 1px solid var(--color-border); }
  .lab-progress__bar { height: 8px; background: #e5e7eb; border-radius: var(--radius-pill); overflow: hidden; }
  .lab-progress__fill {
    height: 100%; border-radius: var(--radius-pill);
    background: linear-gradient(90deg, var(--color-accent), #818cf8);
    transition: width 0.6s ease;
  }
  .lab-progress__info { display: flex; justify-content: space-between; margin-top: 8px; }
  .lab-progress__label { font-size: 12px; font-weight: 600; color: var(--color-text-muted); }
  .lab-progress__value { font-size: 12px; font-weight: 700; color: var(--color-text-secondary); }

  /* Footer */
  .site-footer {
    display: flex; align-items: center; justify-content: space-between;
    flex-wrap: wrap; gap: 12px;
    margin-top: 20px; padding: 16px 20px;
    background: var(--color-surface); border-radius: 12px;
    border: 1px solid var(--color-border); font-size: 13px;
  }
  .footer-left { display: flex; align-items: center; gap: 14px; }
  .footer-logo { font-weight: 700; color: var(--color-text-primary); }
  .footer-copy { color: var(--color-text-muted); font-weight: 500; }
  .footer-links { display: flex; gap: 16px; }
  .footer-links a { color: var(--color-text-secondary); text-decoration: none; font-weight: 500; transition: color .15s; }
  .footer-links a:hover { color: var(--color-accent); }
</style>
