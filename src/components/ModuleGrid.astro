---
// Module Grid Component
import { PREDEFINED_TASKS } from '../lib/constants';
import type { Task } from '../types';

interface TaskWithPath extends Task {
  path: string;
}

const tasksWithPaths: TaskWithPath[] = PREDEFINED_TASKS.map(task => ({
  ...task,
  path: `/modul/${task.id}`,
}));

const audienceStyles: Record<string, { bg: string; text: string; label: string }> = {
  kids: { bg: 'bg-green-100', text: 'text-green-700', label: 'ðŸ‘¶ Za djecu' },
  seniors: { bg: 'bg-orange-100', text: 'text-orange-700', label: 'ðŸ‘´ Za starije' },
  all: { bg: 'bg-blue-100', text: 'text-blue-700', label: 'ðŸ‘¥ Za sve' },
};
---

<div id="moduli" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 py-8">
  {tasksWithPaths.map((task, index) => {
    const style = audienceStyles[task.targetAudience] || audienceStyles.all;
    
    return (
      <a
        href={task.path}
        class="group relative bg-white/80 backdrop-blur-lg rounded-[2rem] p-8 border border-white/40 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_20px_40px_rgba(147,51,234,0.1)] transition-all duration-300 hover:-translate-y-2 overflow-hidden"
        style={`animation: float ${6 + index * 0.5}s ease-in-out infinite`}
      >
        <div class="absolute inset-0 bg-gradient-to-br from-white/40 to-white/0 pointer-events-none"></div>
        
        <div class="flex items-start justify-between mb-6 relative z-10">
          <div class="w-16 h-16 bg-slate-50 flex items-center justify-center rounded-2xl shadow-inner text-4xl group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
            {task.icon}
          </div>
          <span class={`text-[11px] uppercase tracking-wider px-3 py-1.5 rounded-xl font-bold ${style.bg} ${style.text} shadow-sm border border-white/50`}>
            {style.label}
          </span>
        </div>
        
        <h3 class="font-bold text-2xl text-slate-800 mb-3 group-hover:text-purple-600 transition-colors font-['Outfit'] relative z-10">
          {task.title}
        </h3>
        
        <p class="text-slate-500 text-sm mb-6 line-clamp-2 leading-relaxed font-['Nunito'] relative z-10">
          {task.scenario}
        </p>
        
        <div class="flex items-center justify-between mt-auto pt-4 border-t border-slate-100 relative z-10">
          <span class="text-xs text-slate-400 font-medium truncate pr-4">
            ðŸ’¡ {task.learningPoint?.substring(0, 35)}...
          </span>
          
          <div class="bg-slate-900 text-white w-10 h-10 rounded-full flex items-center justify-center group-hover:bg-purple-600 group-hover:scale-110 transition-all shadow-md">
            <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
          </div>
        </div>
      </a>
    );
  })}
</div>

