---
// Module Grid Component
import { PREDEFINED_TASKS } from '../lib/constants';
import type { Task } from '../types';

interface TaskWithPath extends Task {
  path: string;
}

const tasksWithPaths: TaskWithPath[] = PREDEFINED_TASKS.map(task => ({
  ...task,
  path: `/modul/${task.id}`,
}));

const audienceStyles: Record<string, { bg: string; text: string; label: string }> = {
  kids: { bg: 'bg-emerald-500/10', text: 'text-emerald-400', label: 'SYS_EDU' },
  seniors: { bg: 'bg-amber-500/10', text: 'text-amber-400', label: 'SYS_ACC' },
  all: { bg: 'bg-indigo-500/10', text: 'text-indigo-400', label: 'SYS_GEN' },
};
---

<div id="moduli" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 py-8">
  {tasksWithPaths.map((task, index) => {
    const style = audienceStyles[task.targetAudience] || audienceStyles.all;
    
    return (
      <a
        href={task.path}
        class="group relative bg-[#050508] p-8 border border-white/10 hover:border-white/30 hover:bg-white/5 transition-all duration-300 hover:-translate-y-1 block"
      >
        <div class="flex items-start justify-between mb-6 relative z-10">
          <div class="text-3xl text-slate-400 group-hover:text-white group-hover:scale-110 transition-all duration-300">
            {task.icon}
          </div>
          <span class={`text-[10px] font-mono tracking-[0.2em] px-3 py-1.5 border border-white/5 ${style.bg} ${style.text}`}>
            {style.label}
          </span>
        </div>
        
        <h3 class="font-bold text-2xl text-slate-200 mb-3 group-hover:text-white transition-colors font-['Outfit'] relative z-10 tracking-tight">
          {task.title}
        </h3>
        
        <p class="text-slate-500 text-sm mb-6 line-clamp-2 leading-relaxed font-['Nunito'] relative z-10">
          {task.scenario}
        </p>
        
        <div class="flex items-center justify-between mt-auto pt-4 border-t border-white/5 relative z-10">
          <span class="text-[10px] font-mono text-slate-500 tracking-wider truncate pr-4 uppercase">
            // {task.learningPoint?.substring(0, 35)}...
          </span>
          
          <div class="text-slate-600 group-hover:text-white transition-colors">
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
          </div>
        </div>
      </a>
    );
  })}
</div>

<!-- Coming Soon Teaser -->
<div class="mt-16 relative overflow-hidden bg-[#0a0a0c] border border-white/10 p-10 md:p-14 text-center">
  <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-500/10 rounded-full mix-blend-screen filter blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-purple-500/10 rounded-full mix-blend-screen filter blur-3xl"></div>
  
  <div class="relative z-10 max-w-2xl mx-auto">
    <div class="inline-flex items-center justify-center w-16 h-16 border border-white/10 bg-white/5 text-slate-300 mb-8 font-mono text-sm tracking-widest">
      SYS_UP
    </div>
    <h3 class="font-bold text-3xl md:text-4xl mb-4 text-white font-['Outfit'] tracking-tight">Sustav u razvoju</h3>
    <p class="text-slate-400 text-lg md:text-xl mb-8 font-['Nunito'] leading-relaxed">
      AI kontinuirano generira nove module na temelju globalne analize podataka. Procesiranje novih sektora u tijeku.
    </p>
    
    <div class="flex flex-wrap gap-3 justify-center">
      {['[ JEZIK ]', '[ FINANCIJE ]', '[ LOGISTIKA ]', '[ ZDRAVLJE ]', '[ KREATIVA ]'].map(tag => (
        <span class="bg-transparent border border-white/10 px-4 py-2 font-mono text-[10px] tracking-[0.2em] text-slate-500 cursor-default hover:text-white hover:border-white/30 transition-colors">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>
